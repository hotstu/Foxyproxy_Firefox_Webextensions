{
    "name": "FoxyProxy Basic",
    "short_name": "FoxyProxy Basic",
    "version": "5.3",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "24": "images/48x48.svg",
        "48": "images/48x48.svg",
        "96": "images/48x48.svg"
    },
    "default_locale": "en",
    "background": {
        "page": "background.html"
    },
    "options_ui": {
        "page": "proxies.html",
        "open_in_tab": true,
        "browser_style": false
    },
    "browser_action": {
        "default_icon": "images/48x48.svg",
        "default_title": "__MSG_appName__",
        "default_popup": "popup.html"
    },
    "applications": {
      "gecko": {
        "id": "foxyproxy-basic@eric.h.jung.mod_by_hglf",
        "strict_min_version": "57.0"
      }
    },
    "permissions": [
        "proxy",
        "storage",
        "tabs",
        "webRequest",        
        "webRequestBlocking",
        "downloads",
        "notifications",
        "browsingData",
        "<all_urls>"
    ]
}
